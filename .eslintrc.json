{
  "extends": [
    "eslint:recommended",
    "plugin:vue/vue3-recommended"
  ],
  "env": {
    "es2021": true,
    "vue/setup-compiler-macros": true
  },
  "globals": {
    "$": true,
    "require": false,
    "process": true,
    "Nova": true,
    "route": true,
    "axios": true,
    "Ziggy": true,
    "describe": true,
    "test": true,
    "expect": true,
    "beforeEach": true,
    "beforeAll": true
  },
  "rules": {
    "max-len": [
      "error",
      {
        "code": 1500,
        "ignoreComments": true,
        "ignorePattern": "d=\"([\\s\\S]*?)\""
      }
    ],
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "vue/html-indent": [
      "error",
      2,
      {
        "attribute": 1,
        "closeBracket": 1,
        "alignAttributesVertically": false,
        "ignores": []
      }
    ],
    "vue/multi-word-component-names": [
      "off",
      {
        "ignores": []
      }
    ],
    "vue/html-self-closing": [
      "error",
      {
        "html": {
          "void": "always",
          "normal": "never",
          "component": "never"
        },
        "svg": "never",
        "math": "never"
      }
    ],
    "vue/script-indent": [
      "error",
      2,
      {
        "baseIndent": 1,
        "switchCase": 1,
        "ignores": []
      }
    ],
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "semi": [
      "error",
      "always"
    ],
    "array-bracket-spacing": [
      "error",
      "always",
      {
        "singleValue": true,
        "objectsInArrays": true,
        "arraysInArrays": true
      }
    ],
    "object-curly-spacing": [
      "error",
      "always",
      {
        "objectsInObjects": true,
        "arraysInObjects": true
      }
    ],
    "space-in-parens": [
      "error",
      "always"
    ],
    "comma-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    "vue/singleline-html-element-content-newline": "off",
    "vue/multiline-html-element-content-newline": "off",
    "vue/order-in-components": [
      "error",
      {
        "order": [
          "el",
          "name",
          "parent",
          "functional",
          [
            "delimiters",
            "comments"
          ],
          [
            "components",
            "directives"
          ],
          "extends",
          "mixins",
          "inheritAttrs",
          "model",
          [
            "props",
            "propsData"
          ],
          "data",
          "filters",
          "computed",
          "watch",
          "methods",
          [
            "template",
            "render"
          ],
          "renderError",
          "LIFECYCLE_HOOKS"
        ]
      }
    ],
    "comma-dangle": [
      2,
      "always-multiline"
    ]
  },
  "overrides": [
    {
      "files": ["tests/**"], // or any other pattern
      "plugins": ["vitest"],
      "extends": ["plugin:vitest/recommended"]
    },
    {
      "files": [
        "*.vue"
      ],
      "rules": {
        "indent": "off"
      }
    },
    {
      "files": [
        "*.js"
      ],
      "rules": {
        "vue/script-indent": "off"
      }
    },
    {
      "files": [
        "**/*.spec.{j,t}s?(x)"
      ],
      "env": {
        "jest": true
      }
    }
  ],
  "plugins": [
    "vue",
    "vitest"
  ]
}
